---
import Layout from "../../layouts/main.astro";
import { eventsData, getEventItem } from "../../data/events";
import { Badge } from "../../components/ui/badge";
import { Button } from "../../components/ui/button";

export function getStaticPaths() {
  return eventsData.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { slug } = Astro.params;
const { event } = Astro.props;

if (!event) {
  return Astro.redirect("/evenements");
}

// Parse date for display
const eventDate = new Date(event.date);
const day = eventDate.getDate();
const month = eventDate.toLocaleDateString("fr-FR", { month: "long" });
const year = eventDate.getFullYear();
const weekday = eventDate.toLocaleDateString("fr-FR", { weekday: "long" });
---

<Layout title={`${event.title} - TAMTAMA`} description={event.description}>
  <article>
    <!-- Hero -->
    <section
      class="bg-gradient-to-br from-primary/10 via-accent/5 to-secondary/10 py-16"
    >
      <div class="container mx-auto max-w-4xl px-4">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center gap-2 text-sm text-muted-foreground">
            <li><a href="/" class="hover:text-primary">Accueil</a></li>
            <li>/</li>
            <li>
              <a href="/evenements" class="hover:text-primary">Événements</a>
            </li>
            <li>/</li>
            <li class="text-foreground">{event.title}</li>
          </ol>
        </nav>

        <div class="flex items-start gap-6 flex-col sm:flex-row">
          <!-- Date Box -->
          <div
            class="flex-shrink-0 w-24 h-24 rounded-lg bg-primary text-primary-foreground flex flex-col items-center justify-center"
          >
            <span class="text-3xl font-bold">{day}</span>
            <span class="text-sm font-medium capitalize"
              >{month.slice(0, 3)}</span
            >
          </div>

          <!-- Title & Meta -->
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-3">
              <Badge variant="secondary">{event.category}</Badge>
            </div>
            <h1
              class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
            >
              {event.title}
            </h1>
            <p class="mt-3 text-lg text-muted-foreground">
              {event.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="py-16">
      <div class="container mx-auto max-w-4xl px-4">
        <div class="grid gap-12 lg:grid-cols-3">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <div
              class="prose prose-lg max-w-none
              prose-headings:text-foreground prose-headings:font-bold
              prose-h2:text-2xl prose-h2:mt-8 prose-h2:mb-4
              prose-p:text-muted-foreground prose-p:leading-relaxed
              prose-li:text-muted-foreground
              prose-strong:text-foreground
              prose-a:text-primary prose-a:no-underline hover:prose-a:underline"
              set:html={event.content}
            />
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="sticky top-24 space-y-6">
              <!-- Event Details Card -->
              <div
                class="rounded-lg border border-border bg-card p-6 space-y-4"
              >
                <h3 class="font-semibold text-foreground">
                  Détails de l'événement
                </h3>

                <div class="space-y-3 text-sm">
                  <div class="flex items-start gap-3">
                    <svg
                      class="h-5 w-5 text-primary flex-shrink-0 mt-0.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"
                      ></path>
                    </svg>
                    <div>
                      <p class="font-medium text-foreground capitalize">
                        {weekday}
                        {day}
                        {month}
                        {year}
                      </p>
                    </div>
                  </div>

                  <div class="flex items-start gap-3">
                    <svg
                      class="h-5 w-5 text-primary flex-shrink-0 mt-0.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
                      ></path>
                    </svg>
                    <div>
                      <p class="font-medium text-foreground">{event.time}</p>
                    </div>
                  </div>

                  <div class="flex items-start gap-3">
                    <svg
                      class="h-5 w-5 text-primary flex-shrink-0 mt-0.5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                      ></path>
                    </svg>
                    <div>
                      <p class="font-medium text-foreground">
                        {event.location}
                      </p>
                      <p class="text-muted-foreground">{event.address}</p>
                    </div>
                  </div>
                </div>

                <div class="pt-4 border-t border-border">
                  <Button className="w-full">
                    S'inscrire à cet événement
                  </Button>
                </div>
              </div>

              <!-- Share -->
              <div class="rounded-lg border border-border bg-card p-6">
                <h3 class="font-semibold text-foreground mb-4">Partager</h3>
                <div class="flex gap-3">
                  <a
                    href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
                    target="_blank"
                    rel="noopener"
                    class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
                  >
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                      ></path>
                    </svg>
                  </a>
                  <a
                    href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${event.title}`}
                    target="_blank"
                    rel="noopener"
                    class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
                  >
                    <svg
                      class="h-5 w-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                      ></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Back Link -->
        <div class="mt-12 pt-8 border-t border-border">
          <a
            href="/evenements"
            class="inline-flex items-center text-sm font-medium text-primary hover:underline"
          >
            <svg
              class="mr-1 h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
            </svg>
            Retour aux événements
          </a>
        </div>
      </div>
    </section>
  </article>
</Layout>
