---
import Layout from "../layouts/main.astro";
import { Button } from "../components/ui/button";
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardDescription,
} from "../components/ui/card";
import { Badge } from "../components/ui/badge";

const courses = [
  {
    name: "Danse Sabar",
    origin: "Sénégal",
    level: "Tous niveaux",
    schedule: "Lundi 19h-20h30",
    description:
      "Le Sabar est une danse traditionnelle sénégalaise, caractérisée par ses mouvements rapides et énergiques. Un voyage au cœur de la culture wolof.",
    instructor: "Mamadou Diallo",
  },
  {
    name: "Afro Contemporain",
    origin: "Fusion",
    level: "Intermédiaire",
    schedule: "Mardi 20h-21h30",
    description:
      "Un mélange unique de danses africaines traditionnelles et de danse contemporaine. Expression artistique et liberté de mouvement.",
    instructor: "Aminata Koné",
  },
  {
    name: "Coupé-Décalé",
    origin: "Côte d'Ivoire",
    level: "Débutant",
    schedule: "Mercredi 19h-20h",
    description:
      "Découvrez les pas emblématiques du Coupé-Décalé, danse festive née dans les années 2000 en Côte d'Ivoire.",
    instructor: "Serge Beynaud",
  },
  {
    name: "Danse Mandingue",
    origin: "Guinée",
    level: "Tous niveaux",
    schedule: "Jeudi 19h-20h30",
    description:
      "Les danses traditionnelles de Guinée, accompagnées au djembé. Force, grâce et connexion avec les rythmes ancestraux.",
    instructor: "Fodé Camara",
  },
  {
    name: "Azonto & Afrobeats",
    origin: "Ghana / Nigeria",
    level: "Débutant",
    schedule: "Vendredi 18h30-19h30",
    description:
      "Les danses urbaines africaines les plus populaires. Du Ghana au Nigeria, apprenez les moves qui font danser le monde.",
    instructor: "Kofi Mensah",
  },
  {
    name: "Danse Congolaise",
    origin: "RD Congo",
    level: "Intermédiaire",
    schedule: "Samedi 14h-15h30",
    description:
      "Ndombolo, Malembe et autres danses congolaises. La finesse des mouvements et l'élégance de la culture congolaise.",
    instructor: "Grace Mbemba",
  },
];

const getLevelColor = (level: string) => {
  switch (level) {
    case "Débutant":
      return "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-100";
    case "Intermédiaire":
      return "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-100";
    case "Avancé":
      return "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-100";
    default:
      return "bg-primary/10 text-primary";
  }
};
---

<Layout
  title="Nos Cours - TAMTAMA"
  description="Découvrez nos cours de danse africaine : Sabar, Coupé-Décalé, Afrobeats et plus encore."
>
  <!-- Hero -->
  <section
    class="bg-gradient-to-br from-secondary/10 via-primary/5 to-accent/10 py-16"
  >
    <div class="container mx-auto max-w-6xl px-4 text-center">
      <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl">
        Nos Cours
      </h1>
      <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">
        Du Sabar sénégalais au Coupé-Décalé ivoirien, explorez la richesse des
        danses africaines avec nos professeurs passionnés.
      </p>
    </div>
  </section>

  <!-- Courses Grid -->
  <section class="py-16">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          courses.map((course) => (
            <Card className="group hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
              <CardHeader>
                <div class="flex items-start justify-between gap-2">
                  <div>
                    <CardTitle className="text-xl group-hover:text-primary transition-colors">
                      {course.name}
                    </CardTitle>
                    <CardDescription className="mt-1">
                      {course.origin}
                    </CardDescription>
                  </div>
                  <Badge className={getLevelColor(course.level)}>
                    {course.level}
                  </Badge>
                </div>
              </CardHeader>
              <CardContent className="space-y-4">
                <p class="text-sm text-muted-foreground">
                  {course.description}
                </p>

                <div class="space-y-2 text-sm">
                  <div class="flex items-center gap-2 text-foreground">
                    <svg
                      class="h-4 w-4 text-primary"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <span>{course.schedule}</span>
                  </div>
                  <div class="flex items-center gap-2 text-foreground">
                    <svg
                      class="h-4 w-4 text-primary"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
                      />
                    </svg>
                    <span>Prof. {course.instructor}</span>
                  </div>
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section class="py-16 bg-muted/30">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-foreground">Tarifs</h2>
        <p class="mt-3 text-muted-foreground">
          Formules adaptées à tous les budgets
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-3 max-w-4xl mx-auto">
        <Card className="text-center">
          <CardHeader>
            <CardTitle>Cours à l'unité</CardTitle>
            <div class="mt-4">
              <span class="text-4xl font-bold text-primary">15€</span>
              <span class="text-muted-foreground">/cours</span>
            </div>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>Accès à un cours</li>
              <li>Sans engagement</li>
              <li>Idéal pour découvrir</li>
            </ul>
          </CardContent>
        </Card>

        <Card className="text-center border-primary relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2">
            <Badge className="bg-primary text-primary-foreground"
              >Populaire</Badge
            >
          </div>
          <CardHeader>
            <CardTitle>Carte 10 cours</CardTitle>
            <div class="mt-4">
              <span class="text-4xl font-bold text-primary">120€</span>
              <span class="text-muted-foreground">/carte</span>
            </div>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>10 cours au choix</li>
              <li>Valable 3 mois</li>
              <li>20% d'économie</li>
            </ul>
          </CardContent>
        </Card>

        <Card className="text-center">
          <CardHeader>
            <CardTitle>Abonnement mensuel</CardTitle>
            <div class="mt-4">
              <span class="text-4xl font-bold text-primary">60€</span>
              <span class="text-muted-foreground">/mois</span>
            </div>
          </CardHeader>
          <CardContent>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>Cours illimités</li>
              <li>Accès à tous les styles</li>
              <li>Résiliable à tout moment</li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-primary text-primary-foreground">
    <div class="container mx-auto max-w-4xl px-4 text-center">
      <h2 class="text-3xl font-bold">Premier cours d'essai gratuit !</h2>
      <p class="mt-4 text-lg opacity-90">
        Venez découvrir la danse africaine sans engagement. Réservez votre cours
        d'essai.
      </p>
      <div class="mt-8">
        <a
          href="/contact"
          class="inline-flex h-11 items-center justify-center rounded-md bg-background px-8 text-sm font-medium text-foreground shadow transition-colors hover:bg-background/90"
        >
          Réserver un cours d'essai
        </a>
      </div>
    </div>
  </section>
</Layout>
